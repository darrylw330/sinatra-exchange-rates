<!-- views/currency_conversion.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Currency Conversion Options</title>
</head>
<body>
  <% if @requested_currency %>
    <h1><a href="/<%= @requested_currency %>">Convert 1 <%= @requested_currency %> to...</a></h1>
    <ul>
      <% @other_currencies.each do |currency| %>
        <li><a href="/<%= @requested_currency %>/<%= currency %>">Convert 1 <%= @requested_currency %> to <%= currency %>...</a></li>
      <% end %>
    </ul>
  <% else %>
    <h1>Convert <%= params['currency'] %></h1>
    <p>Currency not found.</p>
  <% end %>
  <p><a href="/">Back to Currency List</a></p>
</body>
</html>
